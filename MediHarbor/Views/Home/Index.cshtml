@{
    ViewData["Title"] = "Home Page";
}
<style>
    #particles-js {
        background-color: #1e3a5f;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        z-index: -1;
    }

    .text-center {
        position: relative;
        z-index: 1;
        padding: 100px 20px;
        color: navajowhite;
    }

    .non-particles-section {
        background-color: #e8f4f8;
        padding: 50px 20px;
        text-align: center;
    }
</style>

<div id="particles-js"></div>

<div class="text-center">
    <h1 class="display-4">MediHarbor</h1>
    <p>Connecting communities with compassionate care and cutting-edge healthcare services.</p>
</div>


<div class="non-particles-section">
    <h2>Additional Content</h2>
    <p>This section does not have the particles background.</p>
    <p>You can add more content here.</p>
</div>

@section Scripts {
    <script src="~/js/particles.js"></script>
    <script>
        particlesJS("particles-js", {
            particles: {
                number: { value: 80, density: { enable: true, value_area: 800 } },
                color: { value: "#e5ffff" },
                shape: {
                    type: "circle",
                    stroke: { width: 0, color: "#000000" },
                    polygon: { nb_sides: 5 },
                },
                opacity: { value: 0.5, random: false },
                size: { value: 3, random: true },
                line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.4, width: 1 },
                move: { enable: true, speed: 6, direction: "none", random: false, straight: false, out_mode: "out", bounce: false }
            },
            interactivity: {
                detect_on: "window",
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" },
                    resize: true
                },
                modes: {
                    grab: { distance: 400, line_linked: { opacity: 1 } },
                    bubble: { distance: 400, size: 40, duration: 2, opacity: 8, speed: 3 },
                    repulse: { distance: 200, duration: 0.4 },
                    push: { particles_nb: 4 },
                    remove: { particles_nb: 2 }
                }
            },
            retina_detect: true
        });
    </script>
}
