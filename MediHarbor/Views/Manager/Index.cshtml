@model IEnumerable<MediHarbor.Models.Scan>

@{
    ViewData["Title"] = "Scans";
}

<h1>Available Scans</h1>

<a href="@Url.Action("Create", "Manager")" class="btn btn-success" style="background-color: #1e3a5f;">Create New Scan</a>

<table class="table">
    <thead>
        <tr>
            <th>Type of the Scan</th>
            <th>Body Part</th>
            <th>Location</th>
            <th>Available Date</th>
            <th>Price</th>
            <th>Duration</th>
            <th>Description</th>
            <th>Actions</th> <!-- Added for the Dropdown -->
        </tr>
    </thead>
    <tbody>
        @foreach (var scan in Model)
        {
            <tr>
                <td>@scan.ScanType</td>
                <td>@scan.BodyPart</td>
                <td>@scan.Location</td>
                <td>@scan.AvailableDate.ToString("yyyy-MM-dd")</td>
                <td>@scan.Price</td>
                <td>@scan.Duration</td>
                <td>@scan.Description</td>
                <td>
                    <!-- Bootstrap Dropdown for Actions -->
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton_@scan.ScanID"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            Actions
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton_@scan.ScanID">
                            
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Edit", "Manager", new { id = scan.ScanID })">
                                    Edit
                                </a>
                            </li>
                            
                            <li>
                                <form asp-action="Delete" asp-route-id="@scan.ScanID" method="post" style="display:inline;"
                                      onsubmit="return confirm('Are you sure you want to delete this scan?');">
                                    <button type="submit" class="dropdown-item text-danger">Delete</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
