@{
    ViewBag.Title = "YouTube Video Search";
}

<style>
    body {
        background: linear-gradient(135deg, #1e3a5f 0%, #4a90e2 100%);
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        margin-top: 20px;
        font-size: 2.5rem;
    }

    form {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background: rgba(0, 0, 0, 0.8);
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.7);
    }

    label {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    button {
        background: #4a90e2;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        width: 100%;
        font-size: 1.2rem;
    }

        button:hover {
            background: #357ab8;
        }

    ul {
        list-style-type: none;
        padding: 0;
    }

    li {
        margin-bottom: 30px;
        text-align: center;
    }

    iframe {
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.8);
    }

    a {
        text-decoration: none;
        color: #4a90e2;
        font-weight: bold;
    }

        a:hover {
            color: #ffcc00;
        }

    .results-section {
        margin-top: 50px;
        padding: 30px;
        background: rgba(0, 0, 0, 0.8);
        border-radius: 15px;
    }
</style>

<h2>YouTube Video Search</h2>

<form method="post" action="@Url.Action("Search", "YouTube")">
    <label for="keyword">Search Keyword:</label>
    <input type="text" id="keyword" name="keyword" required />
    <button type="submit">Search</button>
</form>

@if (ViewBag.Videos != null && ViewBag.Videos.Count > 0)
{
    <div class="results-section">
        <h3>Search Results:</h3>

        <h4>Videos:</h4>
        <ul>
            @foreach (var video in ViewBag.Videos)
            {
                <li>
                    <iframe width="560" height="315"
                            src="https://www.youtube.com/embed/@video.Id"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen>
                    </iframe>
                    <br />
                    <a href="https://www.youtube.com/watch?v=@video.Id" target="_blank">@video.Title</a>
                </li>
            }
        </ul>

        <h4>Channels:</h4>
        <ul>
            @foreach (var channel in ViewBag.Channels)
            {
                <li>
                    <a href="https://www.youtube.com/channel/@channel.Id" target="_blank">@channel.Title</a>
                </li>
            }
        </ul>

        <h4>Playlists:</h4>
        <ul>
            @foreach (var playlist in ViewBag.Playlists)
            {
                <li>
                    <a href="https://www.youtube.com/playlist?list=@playlist.Id" target="_blank">@playlist.Title</a>
                </li>
            }
        </ul>
    </div>
}
else
{
    <p style="text-align: center; font-size: 1.2rem; margin-top: 30px;">No results found. Try a different keyword.</p>
}
